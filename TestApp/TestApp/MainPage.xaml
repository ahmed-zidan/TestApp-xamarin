<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestApp.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Welcome to my Page!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <Entry x:Name="UserNameEntry" Placeholder="UserName" HorizontalTextAlignment="Center"></Entry>
        <Entry x:Name="passwordEntry" Placeholder="password" HorizontalTextAlignment="Center"></Entry>

        <Button Text="Login" BackgroundColor="#2196F3"></Button>

        <Button Text="Register" x:Name="btnRegister" Clicked="btnRegister_Clicked" VerticalOptions="EndAndExpand" Margin="2" BackgroundColor="AliceBlue"></Button>
        
    </StackLayout>

</ContentPage>
